<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="65dp"
        android:text="French Teacher"
        android:textColor="#C9B5ED"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <Button
        android:id="@+id/black"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:text="Black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/green"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="Green"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/black" />

    <Button
        android:id="@+id/purple"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:text="Purple"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green" />

    <Button
        android:id="@+id/red"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="27dp"
        android:text="Red"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="113dp"
        android:text="Yellow"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red" />

</androidx.constraintlayout.widget.ConstraintLayout>